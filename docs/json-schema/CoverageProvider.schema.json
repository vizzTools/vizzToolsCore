        {
            "name": "xarray",
            "type": "coverage",
            "data": "tests/data/coads_sst.nc",
            "format": {
                "name": "netcdf",
                "mimetype": "application/x-netcdf"
            },
            "time_field": "time",
            "x_field": "lon"
        },
        {
            "name": "xarray",
            "type": "coverage",
            "data": "tests/data/analysed_sst.zarr",
