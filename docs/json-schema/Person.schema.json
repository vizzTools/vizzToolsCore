{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/Person.schema.json",
    "type": "object",
    "title": "Person",
    "description": "A person (alive, dead, undead, or fictional).",
    "required": [
        "@type",
        "name"
    ],
    "properties": {
        "@type": {
            "$ref": "@type.schema.json",
            "enum": ["Person"]
        },
        "@id": {
            "$ref": "@id.schema.json"
        },
        "sameAs": {
            "$ref": "sameAs.schema.json"
            },
        "givenName": {
            "type": "string",
            "title": "Given or first name"
        },
        "familyName": {
            "type": "string",
            "title": "Family or last name"
        },
        "name": {
            "$ref": "name.schema.json",
            "title": "Full name as Given Family name"
        },
        "affiliation": {
            "title": "Organization person is affiliated with",
            "oneOf": [{"$ref": "Organization.schema.json"}, {"type":"string"}]
        }
    }
}