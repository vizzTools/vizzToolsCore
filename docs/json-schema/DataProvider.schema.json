{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/DataProvider.schema.json",
    "title": "DataProvider",
    "description": "A vizzToolsCore DataProvider definition object that describes the information needed for accessing the dataset data items.",
    "definitions": {
        "type": {
            "type": "string",
            "description": "Provider definition type.",
            "enum": [
                "coverage"
            ]
        },
        "name": {
            "type": "string",
            "description": "Provider definition name."
        },
        "database_data": {
            "type": "object",
            "description": "Object defining database connection.",
            "properties": {
                "host": {
                    "type": "string"
                },
                "dbname": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "search_path": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        },
        "data": {
            "$ref": "uri.schema.json",
            "description": "URI pointing to the data."
        },
        "id_field": {
            "type": "string",
            "description": "Identifier field of the data."
        },
        "time_field": {
            "type": "string",
            "description": "Time field of the data."
        },
        "x_field": {
            "type": "string",
            "description": "X field name of the data."
        },
        "y_field": {
            "type": "string",
            "description": "Y field name of the data."
        },
        "geom_field": {
            "type": "string",
            "description": "Geometry field of the data."
        },
        "table": {
            "type": "string",
            "description": "Table name of the data."
        },
        "options": {
            "type": "object",
            "description": "Provider data specific options."
        },
        "format": {
            "type": "object",
            "description": "Provider data format.",
            "properties": {
                "name": {
                    "type": "string"
                },
                "mimetype": {
                    "type": "string"
                }
            }
        },
        "zoom": {
            "type": "object",
            "description": "Minimum and maximum zoom levels.",
            "properties": {
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                }
            }
        },
        "schemes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "type",
        "name",
        "data"
    ],
    "properties": {
        "type": {
            "$ref": "#/definitions/type"
        },
        "name": {
            "$ref": "#/definitions/name"
        },
        "data": {
            "oneOf": [
                {
                    "$ref": "#/definitions/data"
                },
                {
                    "$ref": "#/definitions/database_data"
                }
            ]
        },
        "id_field": {
            "$ref": "#/definitions/id_field"
        },
        "time_field": {
            "$ref": "#/definitions/time_field"
        },
        "x_field": {
            "$ref": "#/definitions/x_field"
        },
        "y_field": {
            "$ref": "#/definitions/y_field"
        },
        "geom_field": {
            "$ref": "#/definitions/geom_field"
        },
        "table": {
            "$ref": "#/definitions/table"
        },
        "options": {
            "$ref": "#/definitions/options"
        },
        "format": {
            "$ref": "#/definitions/format"
        },
        "zoom": {
            "$ref": "#/definitions/zoom"
        },
        "schemes": {
            "$ref": "#/definitions/schemes"
        }
    },
    "examples": [
        {
            "type": "coverage",
            "name": "rasterio",
            "data": "tests/data/CMC_glb_TMP_TGL_2_latlon.15x.15_2020081000_P000.grib2",
            "options": {
                "DATA_ENCODING": "COMPLEX_PACKING"
            },
            "format": {
                "name": "GRIB",
                "mimetype": "application/x-grib2"
            }
        },
        {
            "type": "coverage",
            "name": "xarray",
            "data": "tests/data/coads_sst.nc",
            "x_field": "lon",
            "time_field": "time",
            "format": {
                "name": "netcdf",
                "mimetype": "application/x-netcdf"
            }
        },
        {
            "type": "coverage",
            "name": "xarray",
            "data": "tests/data/analysed_sst.zarr",
            "format": {
                "name": "zarr",
                "mimetype": "application/zip"
            }
        }
    ]
}