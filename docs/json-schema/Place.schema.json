{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/Place.schema.json",
    "title": "Place",
    "description": "Entities that have a somewhat fixed, physical extension.",
    "type": "object",
    "required": [
        "@type",
        "name"
    ],
    "properties": {
        "@type": {
            "$ref": "@type.schema.json",
            "enum": [
                "Place"
            ]
        },
        "name": {
            "title": "Name of the place",
            "$ref": "name.schema.json"
        },
        "geo": {
            "$ref": "geo.schema.json"
        },
        "globalLocationNumber": {
            "$ref": "globalLocationNumber.schema.json"
        }
    },
    "examples": [
        {
            "@type": "Place",
            "name": "Global tropics"
        },
        {
            "@type": "Place",
            "name": "A point",
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": 39.328,
                "longitude": 120.1633
            }
        },
        {
            "@type": "Place",
            "name": "A point",
            "geo": {
                "@type": "GeoShape",
                "box": "39.3280 120.1633 40.445 123.7878"
            }
        }
    ]
}