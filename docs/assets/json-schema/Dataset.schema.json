{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "./Dataset.schema.json",
    "type": "object",
    "title": "Dataset metadata",
    "description": "A schema.org Dataset metadata object that describes the dataset.",
    "required": [
        "$schema",
        "@type",
        "@context",
        "name",
        "description"
    ],
    "definitions": {
        "arrayOrString": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "arrayOrUrl": {
            "oneOf": [
                {
                    "$ref": "./uri.schema.json"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "./uri.schema.json"
                    }
                }
            ]
        },
        "personOrOrganization": {
            "oneOf": [
                {
                    "$ref": "./Person.schema.json"
                },
                {
                    "$ref": "./Organization.schema.json"
                }
            ]
        },
        "arrayPersonOrOrganization": {
            "oneOf": [
                {
                    "type": "array",
                    "title": "Dataset creator(s)",
                    "items": {
                        "$ref": "#/definitions/personOrOrganization"
                    }
                },
                {
                    "$ref": "#/definitions/personOrOrganization"
                }
            ]
        }
    },
    "properties": {
        "$schema": {
            "$ref": "./$schema.schema.json",
            "default": "Dataset.schema.json"
        },
        "@type": {
            "$ref": "./@type.schema.json",
            "enum": [
                "Dataset"
            ],
            "default": "Dataset"
        },
        "@context": {
            "$ref": "./@context.schema.json",
            "default": "Dataset"
        },
        "@id": {
            "$ref": "./@id.schema.json"
        },
        "name": {
            "title": "A descriptive name of the dataset",
            "$ref": "./name.schema.json"
        },
        "description": {
            "title": "A short summary describing the dataset",
            "$ref": "./description.schema.json"
        },
        "version": {
            "title": "The version string or number for the dataset",
            "$ref": "./version.schema.json"
        },
        "datePublished": {
            "title": "Publishing date of the dataset",
            "$ref": "./date.schema.json"
        },
        "creator": {
            "title": "The creator or author of this dataset",
            "$ref": "./creator.schema.json"
        },
        "identifier": {
            "title": "Identifier(s) of the dataset",
            "$ref": "./identifier.schema.json"
        },
        "citation": {
            "title": "Academic citation(s) about the dataset",
            "$ref": "./citation.schema.json"
        },
        "license": {
            "title": "License of the dataset",
            "$ref": "./license.schema.json"
        },
        "url": {
            "title": "URL of the dataset",
            "$ref": "./uri.schema.json"
        },
        "isBasedOn": {
            "title": "Resources this dataset is based on",
            "$ref": "./isBasedOn.schema.json"
        },
        "sameAs": {
            "title": "Resources this dataset is the same as",
            "$ref": "./sameAs.schema.json"
        },
        "inLanguage": {
            "title": "Language of this object",
            "$ref": "./iso-639-1-language-codes.schema.json"
        },
        "alternateName": {
            "title": "Alternate name of the dataset",
            "type": "string"
        },
        "variableMeasured": {
            "$ref": "./variableMeasured.schema.json"
        },
        "measurementTechnique": {
            "$ref": "./measurementTechnique.schema.json"
        },
        "unitText": {
            "type": "string"
        },
        "spatialCoverage": {
            "type": "string"
        },
        "temporalCoverage": {
            "type": "string"
        },
        "thumbnailUrl": {
            "title": "Thumbnail URL of the dataset",
            "$ref": "./uri.schema.json"
        },
        "funder": {
            "title": "Funder for creation of the dataset",
            "$ref": "#/definitions/arrayPersonOrOrganization"
        },
        "provider": {
            "title": "Provider or distributor of the dataset",
            "$ref": "#/definitions/arrayPersonOrOrganization"
        },
        "distribution": {
            "title": "Data download URIs",
            "type": "array",
            "items": {
                "$ref": "./DataDownload.schema.json"
            }
        }
    }
}