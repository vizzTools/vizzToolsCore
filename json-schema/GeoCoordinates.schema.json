{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "GeoCoordinates.schema.json",
    "title": "GeoCoordinates",
    "description": "The geographic coordinates of an entity.",
    "type": "object",
    "required": [
        "@type",
        "latitude",
        "longitude"
    ],
    "properties": {
        "@type": {
            "$ref": "@type.schema.json",
            "enum": [
                "GeoCoordinates"
            ]
        },
        "latitude": {
            "title": "latitude",
            "description": "The latitude of a location. For example 37.42242 (WGS 84).",
            "type": "number"
        },
        "longitude": {
            "title": "longitude",
            "description": "The longitude of a location. For example -122.08585 (WGS 84).",
            "type": "number"
        }
    },
    "examples": [
        {
            "@type": "GeoCoordinates",
            "latitude": 39.328,
            "longitude": 120.1633
        }
    ]
}