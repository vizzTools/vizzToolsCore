{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/Organization.schema.json",
    "type": "object",
    "title": "Organization",
    "description": "An organization such as a school, NGO, corporation, club, etc.",
    "examples": [
        {
            "@type": "Organization",
            "@id": "https://ror.org/02a809t02",
            "sameAs": "https://ror.org/02a809t02",
            "name": "Vizzuality"
        }
    ],
    "required": [
        "@type",
        "name"
    ],
    "properties": {
        "@type": {
            "$ref": "@type.schema.json",
            "enum": [
                "Organization"
            ]
        },
        "@id": {
            "$ref": "@id.schema.json"
        },
        "url": {
            "$ref": "uri.schema.json"
        },
        "name": {
            "type": "string"
        },
        "sameAs": {"$ref": "sameAs.schema.json"},
        "contactPoint": {
            "type": "object",
            "title": "contactPoint",
            "required": [
                "@type",
                "email"
            ],
            "properties": {
                "@type": {
                    "$ref": "@type.schema.json",
                    "enum": [
                        "contactPoint"
                    ]
                },
                "contactType": {
                    "type": "string"
                },
                "telephone": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            }
        }
    }
}