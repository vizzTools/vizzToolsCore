{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/Organization.schema.json",
    "type": "object",
    "title": "Organization",
    "required": [
        "@type",
        "name"
    ],
    "properties": {
        "@type": {
            "$ref": "@type.schema.json",
            "enum": ["Organization"]
        },
        "@id": {
            "$ref": "@id.schema.json"
        },
        "url": {
            "$ref": "uri.schema.json"
        },
        "name": {
            "type": "string"
        },
        "contactPoint": {
            "type": "object",
            "title": "contactPoint",
            "required": [
                "@type",
                "email"
            ],
            "properties": {
                "@type": {
                    "$ref": "@type.schema.json",
                    "enum": ["contactPoint"]
                },
                "contactType": {
                    "type": "string"
                },
                "telephone": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            }
        }
    }
}