{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://vizztools.github.io/vizzToolsCore/json-schema/coverageProvider.schema.json",
    "title": "tileProvider",
    "description": "A vizzToolsCore tile provider definition object that describes the connection of the dataset data.",
    "definitions": {
        "type": {
            "type": "string",
            "description": "Provider definition type.",
            "enum": [
                "coverage"
            ]
        },
        "name": {
            "type": "string",
            "description": "Provider definition name."
        },
        "data": {
            "$ref": "uri.schema.json",
            "description": "URI pointing to the data."
        },
        "zoom": {
            "type": "object",
            "description": "Minimum and maximum zoom levels.",
            "properties": {
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                }
            }
        },
        "schemes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "options": {
            "type": "object",
            "description": "Tile provider data specific options.",
            "properties": {
                "metadata_format": {
                    "type": "string"
                },
                "zoom": {
                    "$ref": "#/definitions/zoom"
                },
                "schemes": {
                    "$ref": "#/definitions/schemes"
                }
            }
        },
        "format": {
            "type": "object",
            "description": "Tile provider data format.",
            "properties": {
                "name": {
                    "type": "string"
                },
                "mimetype": {
                    "type": "string"
                }
            }
        },
        "MVT": {
            "type": "object",
            "title": "MVT",
            "description": "MVT tileProvider",
            "required": [
                "type",
                "name",
                "data",
                "options",
                "format"
            ],
            "properties": {
                "type": {
                    "$ref": "#/definitions/type"
                },
                "name": {
                    "$ref": "#/definitions/name"
                },
                "data": {
                    "$ref": "#/definitions/data"
                },
                "options": {
                    "$ref": "#/definitions/options"
                },
                "format": {
                    "$ref": "#/definitions/format"
                }
            }
        }
    },
    "anyOf": [
        {
            "$ref": "#/definitions/MVT"
        }
    ],
    "examples": [
        {
            "type": "tile",
            "name": "MVT",
            "data": "tests/data/tiles/ne_110m_lakes",
            "options": {
                "metadata_format": "raw",
                "zoom": {
                    "min": 0,
                    "max": 5
                },
                "schemes": [
                    "WorldCRS84Quad"
                ]
            },
            "format": {
                "name": "pbf",
                "mimetype": "application/vnd.mapbox-vector-tile"
            }
        }
    ]
}