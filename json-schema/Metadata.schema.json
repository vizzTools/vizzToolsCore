{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/json-schema/Metadata.schema.json",
    "type": "object",
    "title": "Metadata",
    "required": [
        "$schema",
        "@context",
        "@type",
        "name",
        "description"
    ],
    "definitions": {
        "@type": {
            "type": "string",
            "enum": [
                "Dataset"
            ],
            "title": "Object type"
        },
        "inLanguage": {"$ref": "./iso-639-1-language-codes.schema.json"},
        "dateTime": {
            "type": "string",
            "format": "date-time"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "datePublished": {
            "$ref": "#definitions/date"
        },
        "URL": {
            "type": "string",
            "format": "uri"
        },
        "$schema": {
            "$ref": "#definitions/URL"
        },
        "@context": {
            "$ref": "#definitions/URL"
        },
        "isBasedOn": {
            "$ref": "#definitions/URL"
        },
        "sameAs": {
            "$ref": "#definitions/URL"
        },
        "thumbnailUrl": {
            "$ref": "#definitions/URL"
        },
        "url": {
            "$ref": "#definitions/URL"
        },
        "urlOrString": {
            "anyOf": [
                {
                    "#ref": "#definitions/URL"
                },
                {
                    "type": "string"
                }
            ]
        },
        "@id": {
            "#ref": "#definitions/urlOrString"
        },
        "license": {
            "#ref": "#definitions/urlOrString"
        },
        "arrayOrString": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "arrayOrUrl": {
            "oneOf": [
                {
                    "$ref": "#definitions/URL"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#definitions/URL"
                    }
                }
            ]
        },
        "keywords": {
            "$ref": "#definitions/arrayOrString"
        },
        "identifier": {
            "$ref": "#definitions/arrayOrString"
        },
        "citation": {
            "$ref": "#definitions/arrayOrString"
        },
        "personOrOrganization": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "@type": {
                    "type": "string",
                    "enum": [
                        "Person",
                        "Organization"
                    ]
                },
                "@id": {
                    "type": "string",
                    "format": "uri"
                },
                "affiliation": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "@type",
                "name"
            ],
            "title": "Person or Organization"
        },
        "creator": {
            "oneOf": [
                {
                    "type": "array",
                    "title": "Dataset creator(s)",
                    "items": {
                        "$ref": "#/definitions/personOrOrganization"
                    }
                },
                {
                    "$ref": "#/definitions/personOrOrganization"
                }
            ]
        },
        "funder": {
            "oneOf": [
                {
                    "type": "array",
                    "title": "Dataset funder(s)",
                    "items": {
                        "$ref": "#/definitions/personOrOrganization"
                    }
                },
                {
                    "$ref": "#/definitions/personOrOrganization"
                }
            ]
        },
        "provider": {
            "oneOf": [
                {
                    "type": "array",
                    "title": "Dataset funder(s)",
                    "items": {
                        "$ref": "#/definitions/personOrOrganization"
                    }
                },
                {
                    "$ref": "#/definitions/personOrOrganization"
                }
            ]
        },
        "dataDownload": {
            "@type": {
                "type": "string",
                "enum": "DataDownload"
            },
            "name": {
                "type": "string"
            },
            "contentUrl": {
                "$ref": "#definitions/URL"
            },
            "encodingFormat": {
                "type": "string"
            }
        },
        "distribution": {
            "type": "array",
            "items": {"$ref": "#definitions/dataDownload"}
        },
        "Dataset": {
            "properties": {
                "@context": {
                    "$ref": "#definitions/@context"
                },
                "@type": {
                    "$ref": "#definitions/@type"
                },
                "@id": {
                    "$ref": "#definitions/@id"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "datePublished": {
                    "$ref": "#definitions/datePublished"
                },
                "creator": {
                    "$ref": "#definitions/creator"
                },
                "identifier": {
                    "$ref": "#definitions/identifier"
                },
                "citation": {
                    "$ref": "#definitions/citation"
                },
                "license": {
                    "$ref": "#definitions/license"
                },
                "url": {
                    "$ref": "#definitions/url"
                },
                "isBasedOn":{"$ref": "#definitions/isBasedOn"},
                "sameAs":{"$ref": "#definitions/sameAs"},
                "inLanguage": {
                    "$ref": "#definitions/inLanguage"
                },
                "alternateName": {
                    "type": "string"
                },
                "variableMeasured": {
                    "type": "string"
                },
                "measurementTechnique": {
                    "type": "string"
                },
                "unitText": {
                    "type": "string"
                },
                "spatialCoverage": {
                    "type": "string"
                },
                "temporalCoverage": {
                    "type": "string"
                },
                "thumbnailUrl": {
                    "$ref": "#definitions/thumbnailUrl"
                },
                "provider": {
                    "$ref": "#definitions/provider"
                },
                "funder": {
                    "$ref": "#definitions/funder"
                },
                "distribution": {
                    "$ref": "#definitions/distribution"
                }
            }
        }
    },
    "$ref": "#definitions/Dataset"
}
